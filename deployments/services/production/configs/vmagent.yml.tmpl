global:
  scrape_interval: 15s
  scrape_timeout: 10s

scrape_configs:
  # -----------------------------------------------------
  # Vault Metrics
  # -----------------------------------------------------
  - job_name: "vault"
    metrics_path: /v1/sys/metrics
    params:
      format: ["prometheus"]
    static_configs:
      - targets:
          - "prod-vault001.${DOMAIN}:8200"
          - "prod-vault002.${DOMAIN}:8200"
    scheme: https
    tls_config:
      insecure_skip_verify: true
    relabel_configs:
      - source_labels: [__address__]
        target_label: instance
